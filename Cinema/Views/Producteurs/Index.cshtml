@*Define model*@
@model IEnumerable<Producteur>
@*Define ViewData*@

@{
    ViewData["Title"] = "List of Producers";
}


@*Write a Code*@

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.NomComplet)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>

                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilImageUrl" alt="@item.NomComplet" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NomComplet)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>


                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
